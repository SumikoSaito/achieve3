<div class="container">

  <h1>What's happening?</h1>

  <% @blogs.each do |blog| %>
  <div class="blog-panel">

    <p><%= blog.content %></p>
      <div class="blog-links">
        <%= link_to 'detail', blog_path(blog.id), class: 'btn btn-success'%>
        <%= link_to "edit", edit_blog_path(blog.id), data: { confirm: 'Are you sure you edit it?' }, class: 'btn btn-info'%>
        <%= link_to 'delete', blog_path(blog.id), method: :delete ,data: { confirm: 'Are you sure you delete it?' }, class: 'btn btn-danger'%>
      </div>
  </div>
  <% end %>

</div>
